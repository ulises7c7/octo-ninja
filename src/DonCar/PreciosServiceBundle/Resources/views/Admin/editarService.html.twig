{% extends 'DonCarPreciosServiceBundle::layout.html.twig' %}
{% block content %}

<div class="page-header">
  <h1>{{service.vehiculo.nombre}}: {{service.descripcion}}</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
 		<table class="table table-condensed table-hover">
          <thead>
            <tr>
            	<th>Codigo</th>
            	<th>Descripcion</th>
            	<th>Precio</th>
            	<th>Condicion</th>
            </tr>
          </thead>
          <tbody>
            {% for insumo in service.insumos %}
            <tr>
            	<td>{{ insumo.repuesto.codigo }}</td>
            	<td>{{ insumo.repuesto.descripcion }}</td>
            	<td>{{ insumo.repuesto.precio }}</td>
            	<td title="{{ insumo.condicion.descripcion }}" >{{ insumo.condicion.nombre }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>


       

      </div>
    </div>
  </div><!-- /.col-sm-4 -->
</div>


{% endblock %}